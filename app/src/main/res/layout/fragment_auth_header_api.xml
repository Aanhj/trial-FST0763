<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trial_fst0763.AuthHeaderAPI">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#48D6EF"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/auth_header_pick_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Click to pick the image"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <Button

            android:id="@+id/auth_header_button"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            android:text="Not Completed "
            android:textAllCaps="true"
            android:textColor="@color/black" />


    </LinearLayout>

</FrameLayout>